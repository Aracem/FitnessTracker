<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ubuntudroid.fitnesstracker.WeekDetailFragment"
    android:padding="16dp"
    android:orientation="vertical">

    <de.ubuntudroid.fitnesstracker.view.WeekDataInputView
        android:id="@+id/weight_text"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:desc="Weight"
        app:hint="e.g. 127.8"
        app:unit="lbs"
        />

    <de.ubuntudroid.fitnesstracker.view.WeekDataInputView
        android:id="@+id/fat_fraction_text"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:desc="Fat"
        app:hint="e.g. 27.4"
        app:unit="%"
        />

    <de.ubuntudroid.fitnesstracker.view.WeekDataInputView
        android:id="@+id/muscle_fraction_text"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:desc="Muscle"
        app:hint="e.g. 31.3"
        app:unit="%"
        />

    <de.ubuntudroid.fitnesstracker.view.WeekDataInputView
        android:id="@+id/water_fraction_text"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:desc="Water"
        app:hint="e.g. 49.2"
        app:unit="%"
        />

</LinearLayout>


