<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ubuntudroid.fitnesstracker" >

    <uses-permission  android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".FitnessTrackerApplication">

        <activity
            android:name=".controller.activities.WeekListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activities.WeekDetailActivity"
            android:label="@string/title_week_detail"
            android:parentActivityName=".controller.activities.WeekListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.ubuntudroid.fitnesstracker.WeekListActivity" />
        </activity>
    </application>

</manifest>
